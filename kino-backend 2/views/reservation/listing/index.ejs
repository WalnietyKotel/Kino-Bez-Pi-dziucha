<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon-32x32.png">
    <title><%-mov.name%></title>
    <link rel="stylesheet" href="/css/movie.css">
    <script src="/js/movie.js" defer></script>
</head>
<body id="body"> 

    <div id="bgp" style="display: none;">
        <%-mov.background%>
    </div>

    <main>    
        <header>
            <h1><%-mov.name%></h1>
        </header>
        <article>
            <p class="moviedesc"><%-mov.description%></p>
        </article>
        <a href="<%-mov.trailer%>" target="_blank"><p class="trailer">WATCH TRAILER</p><i class="fa-solid fa-play" class="trailer"></i></a>
        <footer>
            <%sea.forEach(elementSea => { %>
                <%-include(`seaBox`, {sea:elementSea})%>
            <%})%>
        </footer>
    </main>
    <aside>
        <div class="other">
            <h2>PREMIERE</h2>
            <p><%-mov.release_date%></p>
        </div>
        <div class="other">
            <h2>DIRECTOR</h2>
            <p><%-mov.director%></p>
        </div>
        <div class="other">
            <h2>MUSIC BY</h2>
            <p><%-mov.music%></p>
        </div>
        <div class="other">
            <h2>GENRE</h2>
            <p><%-mov.genre%></p>
        </p>
        </div>
    </aside>

</body>
</html>